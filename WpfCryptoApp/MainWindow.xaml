<Window x:Class="WpfCryptoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCryptoApp"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <Border Background="#2f5cb6"/>
        <Border Grid.Column ="1" Background="#1f3d7a"/>
        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#152951"/>
        <Grid Grid.Row="1" Grid.Column="1">
            <Frame x:Name="TopCoinsFrame" NavigationUIVisibility="Hidden" />
        </Grid>
        <StackPanel Grid.Column="0" Grid.Row="1" Margin="10">
            <Button Content="Theme" Command="{Binding RefreshCommand}" Margin="5"/>
            <Button Content="Info" Command="{Binding RefreshCommand}" Margin="5"/>
            <Button Content="Refresh" Command="{Binding RefreshCommand}" Margin="5"/>
            <Button Content="Refresh" Command="{Binding RefreshCommand}" Margin="5"/>
        </StackPanel>
        <Grid Grid.Column="1" Grid.Row="0">
            <TextBox Name="SearchTextBox" Text="Enter coin id" FontSize="16" FontWeight="Bold" TextAlignment="Left"  VerticalContentAlignment="Center"/>
            <Button Name="SearchButton" Content="Search" Command="{Binding SearchCommand}" Margin="5" HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</Window>
