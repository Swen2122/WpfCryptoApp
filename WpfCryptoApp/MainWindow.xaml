<Window x:Class="WpfCryptoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCryptoApp"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <Border Background="#ffffff"/>
        <Border Grid.ColumnSpan="3" 
                Background="#ffffff" 
                Margin="0,39,0,0" 
                Grid.RowSpan="2"/>

        <Grid Grid.Column="1" Grid.Row="1">
            <Frame x:Name="TopCoinsFrame" NavigationUIVisibility="Hidden" />
        </Grid>
        
        <StackPanel Grid.Column="0" Grid.Row="1" Margin="10,10,10,10">
            <Button Content="Theme"
                    Command="{Binding RefreshCommand}"
                    Margin="5"/>
            <Button Content="Info" 
                    Command="{Binding RefreshCommand}"
                    Margin="5"/>
            <Button Content="Refresh"
                    Command="{Binding RefreshCommand}" Margin="5"/>
            <Button Content="Refresh" 
                    Command="{Binding RefreshCommand}" 
                    Margin="5"/>
        </StackPanel>
        
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" 
             Name="SearchTextBox" 
             Text="Enter coin id" 
             FontSize="16" FontWeight="Bold"
             VerticalContentAlignment="Center"/>

            <Button Grid.Column="1" 
            Name="SearchButton" 
            Content="Search" 
            Command="{Binding SearchCommand}"/>

            <Button Grid.Column="2" 
            Name="InfoButton" 
            Content="Info" 
            Command="{Binding GetInfoCommand}"/>
        </Grid>
    </Grid>
</Window>
