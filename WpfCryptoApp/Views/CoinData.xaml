<Page x:Class="WpfCryptoApp.Views.CoinData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfCryptoApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CoinData">


    <ScrollViewer VerticalScrollBarVisibility="Hidden">
    <Grid>
        <Grid.ColumnDefinitions>
             <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
            <Border Style="{StaticResource CardStyle}" Grid.Row="0" Margin="2"/>
            <Border Style="{StaticResource CardStyle}" Grid.Row="1" Margin="2"/>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="8*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>
                <Image Source="{Binding ImageUri.Large}" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="10"/>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding CoinData.Name}" 
                           Grid.Column="0" 
                           Margin="5" 
                           VerticalAlignment="Bottom" 
                           HorizontalAlignment="Left"
                           FontSize="24"/>
                    <TextBlock Text="{Binding CoinData.Symbol}" 
                           Style="{StaticResource SecondaryText}"
                           Typography.Capitals="SmallCaps"
                           Grid.Column="1" 
                           Margin="5" 
                           VerticalAlignment="Bottom" 
                           HorizontalAlignment="Left"
                           FontSize="14"/>
                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2" Margin="10">
                        <Hyperlink NavigateUri="{Binding CoinData.Links.Homepage[0]}" RequestNavigate="Hyperlink_RequestNavigate">
                            <Run Text="Homepage" />
                        </Hyperlink>
                    </TextBlock>

                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <ItemsControl Name="icMarketDataPrise" ItemsSource="{Binding Items}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                         <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="2*" />
                                </Grid.RowDefinitions>
                                    <TextBlock Text="{Binding Title}" Grid.Row="0"  Margin="5,10,10,0" HorizontalAlignment="Left" Style="{StaticResource SecondaryText}"/>
                                <TextBlock Text="{Binding Text}" Grid.Row="1"  Margin="5,0,10,5" HorizontalAlignment="Left" FontSize="20" Style="{StaticResource PrimaryText}"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border Style="{StaticResource CardStyle}" Grid.Column="0" Margin="2" />
                <Border Style="{StaticResource CardStyle}" Grid.Column="1" Margin="2" />
                <ItemsControl Name="icMarketData" ItemsSource="{Binding Markets}" Grid.Column="0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Margin="10">
                                    <Hyperlink NavigateUri="{Binding Url}" RequestNavigate="Hyperlink_RequestNavigate">
                                        <Run Text="{Binding Title}"/>
                                    </Hyperlink>
                                </TextBlock>
                                <TextBlock Text="{Binding Text}" Grid.Column="1"  Margin="5"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Description:" 
                 Margin="10,5,10,0" 
                 VerticalAlignment="Top" 
                 HorizontalAlignment="Left"
                 FontSize="20"
                 Style="{StaticResource PrimaryText}"
                 Grid.Row="0"/>
                    <TextBlock Grid.Row="1" Margin="10,5,10,0"  Text="{Binding CoinData.Description.En}" Style="{StaticResource PrimaryText}" FontSize="12"/>
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
