<Page x:Class="WpfCryptoApp.Views.CoinData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfCryptoApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CoinData">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="8*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Image Source="{Binding ImageUri.Large}" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="5"/>
            <TextBlock Text="{Binding CoinData.Name}" 
                       Grid.Row="0" 
                       Grid.Column="1" 
                       Margin="5" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       FontSize="24"/>
            <!-- <ScrollViewer HorizontalScrollBarVisibility="Disabled" Grid.Row="1" Grid.Column="1">
            <TextBlock Text="{Binding CoinData.Description.En}" 
                       Margin="5"
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Left"
                       TextWrapping="Wrap"
                       FontSize="14"/>
            </ScrollViewer>-->
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <ItemsControl Name="icMarketDataPrise" ItemsSource="{Binding Items}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="{Binding Title}" Grid.Row="0"  Margin="0,0,5,5" />
                            <TextBlock Text="{Binding Text}" Grid.Row="1"  Margin="0,0,5,5"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <ScrollViewer VerticalScrollBarVisibility="Hidden" Grid.Column="0">
                <ItemsControl Name="icMarketData" ItemsSource="{Binding Markets}" >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock>
                                    <Hyperlink NavigateUri="{Binding Url}" RequestNavigate="Hyperlink_RequestNavigate">
                                        <Run Text="{Binding Title}" />
                                    </Hyperlink>
                                </TextBlock>
                                <TextBlock Text="{Binding Text}" Grid.Column="1"  Margin="0,0,5,5"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <Grid Grid.Column="1">
                <StackPanel>
                    <TextBlock>
                         <Hyperlink NavigateUri="{Binding CoinData.Links.Homepage[0]}" RequestNavigate="Hyperlink_RequestNavigate">
                             <Run Text="Homepage" />
                         </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
